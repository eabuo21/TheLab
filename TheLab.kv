<WidgetExample>:
    cols:2
    ToggleButton:
        text: "off"
        on_state: root.on_toggle_button_state(self)
        size_hint: None,None
        height: "100dp"
        width: "100dp"
        pos_hint: {"y":  1}


    Button:
        text: "count"
        on_press:root.on_button_click()


    Label:
        text: root.my_text
        font_name: "fonts/lcd.ttf"
        font_size: "100dp"
        color: 0,  .5, .2, 1






