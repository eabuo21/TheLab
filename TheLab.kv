<AnchorLayoutExample>:
    #   top, bottom, center
    anchor_y: "top"
    #   right, left, center
    anchor_x: "center"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "a1"
        Button:
            text: "b2"














<BoxLayoutExample>:
    orientation: "horizontal"

    Button:
        text: "a"

        color: 0, 1, 1 ,1
        size_hint: .5, .5

        pos_hint: {"center_y":  .5}
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"


        Button:
            text: "b1"
        Button:
            text: "b2"
        Button:
            text: "b3"

    Label:
        text: "c"